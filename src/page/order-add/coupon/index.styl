@import "../../../style/mixin.styl";
.coupons {
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  height: 100%;
  overflow: hidden;
  z-index: 20;
  .outerList{
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 40;
    background: #f4f4f4;
    height: 70%;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
    .couponList{
      margin-top: 20px
      padding: 0 15px;
      .titleBox{
        margin: 4vw 0 3vw;
        display: flex;
        align-items: flex-end;
        .couponTitle{
          font-weight: 600;
          font-size: 4.3vw;
          color: #333333;
          letter-spacing: 0.06666667vw;
          line-height: 6vw;
        }
        .couponLength{
          font-size: 3.2vw;
          color: #58595A;
          letter-spacing: 0.34666667vw;
          line-height: 4.66666667vw;
          margin: 0 0 0.26666667vw 1.06666667vw;
        }
      }
      .couponContent{
        &>*{
          margin-bottom: 1.6vw;
        }
        .container{
          position: relative;
          overflow: hidden;
          display: flex;
          flex-direction: column;
          background: #fff;
          padding: 0 3.2vw 2.13333333vw;
          box-sizing: border-box;
          border-radius: 3.2vw;
          border-bottom: 0.13333333vw solid #f2f2f2;
          z-index: 3;
          padding-top: 1.33333333vw;
          .logoPart{
            position: absolute;
            top: 0;
            left: 0;
            padding: 1.2vw 2.13333333vw;
            font-weight: 500;
            font-size: 2.93333333vw;
            color: #ffffff;
            line-height: 2.93333333vw;
            background-image: linear-gradient(38deg,#ff624a 0%,#ff8a71 100%);
            border-radius: 3.2vw 0.53333333vw;
          }
          .topPart{
            display: flex;
            position: relative;
            .content{
              flex: auto;
              display: flex;
              flex-direction: column;
              .topLine{
                flex: auto;
                font-size: 20px;
                height: 9.73333333vw;
                display: flex;
                flex-direction: row;
                align-items: flex-end;
                justify-content: space-between;
                .name{
                  flex: auto;
                  font-weight: 450;
                  font-size: 4.5vw;
                  line-height: 5.33333333vw;
                  overflow: hidden;
                  display: -webkit-box;
                  -webkit-line-clamp: 1;
                  -webkit-box-orient: vertical;
                } 
                .disContainer{
                  flex: none;
                  display: flex;
                  align-items: flex-end;
                  margin-right: 8vw;
                  transform: translateX(50%);
                  height: 100%;
                  .yuan{
                    font-size: 3.73333333vw;
                    color: #ff4a26;
                    line-height: 3.73333333vw;
                    margin-right: 0.26666667vw;
                  }
                  .discount{
                    font-size: 8.53333333vw;
                    color: #ff4a26;
                    line-height: 8.53333333vw;
                    margin: 2.4vw 0 0 0.26666667vw;
                    transform: translateY(0.8vw);
                  }
                }
              }
              .bottomLine{
                flex: none;
                font-size: 3.2vw;
                margin-bottom: 1.26666667vw;
                min-height: 7.46666667vw;
                margin-top: 1.6vw;
                display: flex;
                flex-direction: row;
                justify-content: space-between;
                .limitTime{
                  color: #575859;
                  line-height: 4.26666667vw;
                }
                .discountDesc{
                  color: #ff4a26;
                  line-height: 4.26666667vw;
                  margin-right: 8vw;
                  transform: translateX(50%);
                }
              }
            }
            .select{
              flex: none;
              width: 4.8vw;
              height: 4.8vw;
              margin-top: 8.8vw;
              margin-left: 2.66666667vw;
              background-repeat: no-repeat;
            }
            .canceled{
              background-image: url(https://p0.meituan.net/openhfiveimages/a4c4a302750255d8c2f69b6aea432fc0378.png);
              background-size: 4.8vw;
            }
            .selected{
              background-image: url(https://p0.meituan.net/openhfiveimages/46cfe77a982c0158e77879982428f5933312.png);
              background-size: 4.8vw;
            }
            .invalid{
              background-image: url(https://p0.meituan.net/openhfiveimages/42526094006ad0f05307580146aadaad1024.jpg);
              background-size: 4.8vw;
            }
          }
          .topPartAfter::after{
            content: '';
            z-index: 1;
            position: absolute;
            top: -2.13333333vw;
            bottom: -2.13333333vw;
            left: -3.2vw;
            right: -3.2vw;
            border-radius: 3.2vw;
            background-color: rgba(255,255,255,0.5);
            pointer-events: none;
          }
          .bottomPart{
            display: flex;
            align-items: flex-start;
            justify-content: space-between;
            border-top: 1px dashed #d3d3d3;
            .ulContainer{
              margin-top: 3.86666667vw;
              line-height: 4.26666667vw;
              flex: auto;
              display: flex;
              justify-content: space-between;
              .useLimits{
                max-width: 76.93333333vw;
                font-size: 2.93333333vw;
                color: #858687;
                line-height: 4vw;
              }
              .closed{
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
              }
              .arrow{
                width: 3.73333333vw;
                height: 3.73333333vw;
                margin-left: 1.06666667vw;
                transform: rotate(180deg);
                transition: transform 0.2s;
              }
              .rotate{
                transform: rotate(0deg);
              }
            }
          }
        }
      }
    }
    .noMorePromotion{
      margin-top: 15px;
      margin-bottom: 20px
      text-align: center;
      color: #333;
      font-size: 14px;
    }
  }
}

.fold-enter-active,.fold-leave-active {
  transition: all 0.2s linear;
}

.fold-enter, .fold-leave-active {
  transform: translateY(100%);
}

.coupons-mask{
  screen-mask(0.3,0.2s)
}